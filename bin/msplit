#!/bin/sh

## Splits arbitrary media files into 30 minute MKV files using ffmpeg.

set -e

split=$((30 * 60))
duration=$(mediainfo --Inform="General;%Duration%" "$1")
nparts=$(((duration / 1000 + split) / split))
extension=${3:-mkv}

for i in $(seq 1 $nparts); do
    out=$(printf "$2%02d.$extension" $i)
    ffmpeg -i "$1" \
           -c:v copy -c:a copy \
           -ss $(((i - 1) * split)) -t \
           $((split + 10)) "$out"
done
